﻿
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <style>

        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: darkred;
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-5" style="background-color: darkred; color: whitesmoke">
        <div class="container">
            <img class="rounded-circle me-3" width="80" height="80" src="https://static.vecteezy.com/ti/vettori-gratis/p3/4854343-fusione-pizza-logo-pizzeria-ristorante-con-fusione-formaggio-logo-icona-modello-illustrazione-vettoriale.jpg" />
            @Html.ActionLink("Pizzorante", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-start">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    <li class="nav-item">@Html.ActionLink("Menu", "Index", "Pizze", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Aggiungi Pizza", "Create", "Pizze", new { area = "" }, new { @class = "nav-link text-white" })</li>
                    }


                </ul>
            </div>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Accedi", "Authorize", "Users", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li class="nav-item">@Html.ActionLink("Registrati", "Create", "Users", new { area = "" }, new { @class = "nav-link text-white" })</li>


                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Carrello", "Carrello", "Pizze", new { area = "" }, new { @class = "nav-link text-white" })</li>
                        <li class="nav-item">
                            <form action="@Url.Action("Logout", "Users")" method="post">
                                <button type="submit" class="btn btn-link nav-link text-white">Logout</button>
                            </form>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <div class="card text-center position-static footer container-fluid" style="background-color: darkred; color:whitesmoke">
        <div class="card-body">
            <h5 class="card-title"> Pizzorante </h5>
            <p class="card-text">Pizze avariate</p>
            <p>  @DateTime.Now.Day  @DateTime.Now.Month  @DateTime.Now.Year </p>
            <p> </p>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>